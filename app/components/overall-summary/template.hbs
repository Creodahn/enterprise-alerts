<section id="overall-summary" class="summary">
  <div class="flex-display flex-row flex-space-between spacer-sm-bottom">
    <h4>Summary</h4>
    <button class="clickable ui labeled icon button" type="button" {{action "refresh"}}>
      <i class="refresh icon"></i>
      <div class="icon-background"></div>
      Refresh
    </button>
  </div>
  {{color-swatch color=swatchColor}}
  <div class="ui flex-display flex-row flex-space-between no-padding spacer-sm-bottom">
    <div class="ui image label red">
      <i class="warning circle icon text-dark-red"></i>
      <label class="detail">{{countIsCritical}}&nbsp;{{pluralize-text "system" countIsCritical}}</label>
    </div>
    <div class="ui image label yellow">
      <i class="warning sign icon text-yellow"></i>
      <label class="detail">{{countIsInformational}}&nbsp;{{pluralize-text "system" countIsInformational}}</label>
    </div>
    <div class="ui image label green">
      <i class="check circle icon text-dark-green"></i>
      <label class="detail">{{countIsUp}}&nbsp;{{pluralize-text "system" countIsUp}}</label>
    </div>
  </div>
  <div class="flex-column flex-display">
    <div class="ui labeled input spacer-sm-bottom">
      <label class="ui label no-padding side-padding">
        Last Notification Updated
      </label>
      <div class="no-padding side-padding">
        {{#if lastUpdated}}
          {{moment-format
            lastUpdated
            "ddd (MM/DD) h:mm A" timeZone="America/Denver"
          }}
        {{else}}
          No Successful Update
        {{/if}}
      </div>
    </div>
    <div class="ui labeled input">
      <label class="ui label no-padding side-padding">Last Check for Update</label>
      <div class="no-padding side-padding">
        {{moment-format
          lastCheckDate
          "ddd (MM/DD) h:mm A" timeZone="America/Denver"
        }}
      </div>
    </div>
  </div>
</section>
